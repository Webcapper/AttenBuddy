 
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body class="container">

<header>
    <%- include('../partials/header4') %>
</header>

<main>
<div class="row">
    <div class="col-sm-8">    
        <div class="jumbotron">
            <h1>AttenBuddy</h1>
            <p>Welcome to one of the best Attendance Management System</p>
        </div>
    </div>

    <div class="col-sm-4">        
        <div class="well">
            <form action = "/addCourse" method = "POST">
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fab fa-affiliatetheme"></i></span>
						</div>
						<input type="text" class="form-control" placeholder="course" name="course">
						
					</div>
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fab fa-affiliatetheme"></i></span>
						</div>
						<input type="text" class="form-control" placeholder="teacher" name="teacher">
					</div>
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fab fa-affiliatetheme"></i></span>
						</div>
						<input type="text" class="form-control" placeholder="year" name="year">
					</div>
					<div class="form-group">
						<input type="submit" value="Create" class="btn float-left  btn-success">
					</div>
				</form>
        </div>
    </div>
</div>
<% var k=0 %>
<% for (var i =0; i < (course.length/4)+1;  i++ ) { %>
    <div class="row">
    <% for (var j =0; j <4;  j++ ) { %>
      <% if(k<course.length) { %>
        <div class="col-sm-3">
    <div class="card-body">
    <div class="card bg-dark text-white">
    <h4 class="card-title" style="text-align:center"><em><b><%= course[k].name %></b></em></h4>
    <hr color="white">
    <center><p class="card-text"><h5><em>Instructor: </em><%= course[k].teacher %></h5></p></center>
    <center><p class="card-text"><h5><em>Intended For: </em><%= course[k].year %> year</h5></p></center>
    <center><form action = "/deleteCourse" method = "POST"><div class="form-group">
    <input type="hidden" name="course" value=<%= course[k].name %> >
    <input type="hidden" name="teacher" value=<%= course[k].teacher %> >
    <input type="hidden" name="year" value=<%= course[k].year %> >
    <input type="submit" value="Delete" class="btn btn-danger btn-sm btn-block">
    </div></form></center>
    </div>
    </div>
    </div>
    <% k++} %>
    <% } %>
    </div>
<% } %>
</main>

<footer>
    <%- include('../partials/footer') %>
</footer>

</body>
</html>
